[color]
  diff = auto
  status = auto
  branch = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red
  new = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[user]
	name = Vijay
	email = vijay@heymath.com

[alias]
	st = status
	ci = commit
  co = checkout
  w = whatchanged
  d = diff
  log = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[apply]
  whitespace = fix

[help]
  autocorrect = 1
